<Canvas
    x:Class="MyScript.InteractiveInk.Views.Controls.InteractiveInkCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:MyScript.InteractiveInk.Views.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Background="Transparent"
    Loaded="InteractiveInkCanvas_OnLoaded"
    SizeChanged="InteractiveInkCanvas_OnSizeChanged"
    Unloaded="InteractiveInkCanvas_OnUnloaded">
    <controls:DrawingCanvas x:Name="BackgroundLayer" />
    <controls:DrawingCanvas x:Name="ModelLayer" />
    <controls:DrawingCanvas x:Name="TemporaryLayer" />
    <controls:DrawingCanvas x:Name="CaptureLayer"
                            PointerCanceled="CaptureLayer_OnPointerCanceled"
                            PointerMoved="CaptureLayer_OnPointerMoved"
                            PointerPressed="CaptureLayer_OnPointerPressed"
                            PointerReleased="CaptureLayer_OnPointerReleased" />
</Canvas>
