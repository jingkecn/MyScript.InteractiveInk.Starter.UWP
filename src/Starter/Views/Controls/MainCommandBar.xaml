<CommandBar
    x:Class="MyScript.InteractiveInk.Views.Controls.MainCommandBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="48"
    d:DesignWidth="320">
    <AppBarButton x:Uid="TypesetButton">
        <AppBarButton.Icon>
            <FontIcon Glyph="{StaticResource FontIconLightBulb}" />
        </AppBarButton.Icon>
    </AppBarButton>
    <CommandBar.SecondaryCommands>
        <AppBarButton x:Uid="UndoButton" Icon="Undo" />
        <AppBarButton x:Uid="RedoButton" Icon="Redo" />
        <AppBarSeparator />
        <AppBarButton x:Uid="ClearAllButton" Icon="Delete" />
    </CommandBar.SecondaryCommands>
    <CommandBar.Content>
        <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                   Text="Main" />
    </CommandBar.Content>
</CommandBar>
